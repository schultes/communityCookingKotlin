<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CommunityCooking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/colorError</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>


        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButton</item>
        <item name="imageButtonStyle">@style/TransparentIconButton</item>
        <item name="android:progressBarStyle">@style/Default_ProgressBar</item>
        <item name="android:spinnerStyle">@style/OutlinedSpinner</item>
    </style>
</resources>